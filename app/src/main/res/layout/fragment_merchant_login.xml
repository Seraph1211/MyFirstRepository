<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:background="@drawable/shape_gray_stroke">

        <ImageView
            android:padding="17dp"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/password"/>

        <EditText
            android:id="@+id/editMerchantPasswordLogin"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:background="@drawable/shape_gray_stroke"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_gravity="center_vertical"
            android:id="@+id/editSecurityCodeLogin"
            android:paddingLeft="20dp"
            android:textSize="25sp"
            android:hint="验证码"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/shape_gray_stroke"/>

        <ImageView
            android:id="@+id/imageSecurityCodeLogin"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:src="@android:color/holo_orange_light"/>

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonLoginMerchant"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:text="登 录"
        android:textSize="25sp"/>

</LinearLayout>