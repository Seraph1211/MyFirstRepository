<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".bottomnavigation.home.store.Store2Activity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shape_orange_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/credits_white"
                app:layout_constraintBottom_toTopOf="@id/text1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/textAvailableCreditsInStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="2000"
                android:textColor="#ffffff"
                android:textSize="45dp"
                app:layout_constraintBottom_toTopOf="@id/text1"
                app:layout_constraintLeft_toRightOf="@id/image1" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="可 用 碳 积 分"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </android.support.constraint.ConstraintLayout>






    </RelativeLayout>

    <Button
        android:id="@+id/buttonToCardPackage"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/shape_corner_white"
        android:text="我的卡包"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToSignInFromStore"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/shape_corner_white"
        android:text="签到领积分"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/shape_corner_white"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  兑换专区"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewStore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>



    </LinearLayout>

    <android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light"
    app:layout_constraintTop_toTopOf="parent"
    >

    <ImageButton
        android:id="@+id/buttonStore2Back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/back_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="积分商城"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

</android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>